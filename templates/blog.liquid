{% include 'nov-breadcrumb' %}
<div class="page-width nov-blog mt-150 mt-xs-70 {% if settings.type_sidebar_blog == 'sidebar_left' %}left_sidebar{% elsif settings.type_sidebar_blog == 'sidebar_right' %}right_sidebar{% elsif settings.type_sidebar_blog == 'sidebar_without' %}no_sidebar{% elsif settings.type_sidebar_blog == 'sidebar_list' %}blog_list{% elsif settings.type_sidebar_blog == 'sidebar_grid' %}blog_grid{% endif %}">
    <div class="container_1320">
      {% if settings.type_sidebar_blog != 'sidebar_without' %}
        <div class="row spacing-60">
      {% else %}
        <div class="row">
      {% endif %}
        {% if settings.type_sidebar_blog != 'sidebar_without' %}
          <div class="sidebar sidebar-article col-lg-3 col-md-4{% if settings.type_sidebar_blog == 'sidebar_right' %} flex-last{% endif %}">
            {% section 'nov-sidebar-article' %}
          </div>
        {% endif %}
        <div class="{% if settings.type_sidebar_blog != 'sidebar_without' %}blog_groups col-lg-9 col-md-8 {% else %}col-lg-12 col-md-12{% endif %}">
          {% section 'blog-template' %}
        </div>
      </div>
    </div>
</div>