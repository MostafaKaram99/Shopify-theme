{%- assign bg_image = section.settings.background_image -%}
<style>
  #shopify-section-{{ section.id }}.section-video {
    {% if section.settings.background_color != blank %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
    {% if bg_image.src != blank %}
      background-image: url("{{ bg_image | img_url: '1920x1920' }}");
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    {% endif %}
  }
  #shopify-section-{{ section.id }} .youtube::after {
    content: '';
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.image_overlay_opacity }}%);
    display: block;
    position: absolute;
    top: 0;
    left: 0;
  }
</style>
<div data-section-id="{{ section.id }}">
  <div class="distance" style="padding-top: 30px; padding-bottom: 30px">
    <div class="container-1320">
      <div class="block">
        <div class="item youtube position-relative">
          <video playsinline autoplay loop muted style="width: 100%;max-width: 100%; height: auto;">
            <source src="{{ section.settings.video_url }}" type="video/mp4" />
          </video>
          <div class="block_title {{ section.settings.title_alignment }}"> 
            {% if section.settings.subheading_1 != blank %}
              <div class="sub-title-1 text-uppercase" style="color: white;font-size: 13px;">{{ section.settings.subheading_1 }}</div>
            {% endif %}
            {% if section.settings.title_video != blank %}
              <div class="title_block" style="color: white;font-size: 60px; font-family:{{settings.type_header_family}}!important;">{{ section.settings.title_video }}</div>
            {% endif %}
            {% if section.settings.subheading_2 != blank %}
              <div class="sub-title-2" style="color: white;font-size: 16px;">{{ section.settings.subheading_2 }}</div>
            {% endif %}
            {% if section.settings.subheading_3 != blank %}
              <div class="sub-title-3 text-uppercase" style="color: white;font-size: 11px;">{{ section.settings.subheading_3 }}</div>
            {% endif %}
            {% if section.settings.subheading_4 != blank %}
              <div class="sub-title-4 text-uppercase" style="color: white;font-size: 11px;">{{ section.settings.subheading_4 }}</div>
            {% endif %}
            {% if section.settings.button_enable == true %}
              <div class="cap_link" style="background-color: {{settings.color_button}}; ">
                <a class="hover_x" href="{{ section.settings.cap_link }}" style="color: {{settings.color_button_text}};">
                  <span>{{ section.settings.title_link }}</span>
                  <i class="zmdi zmdi-long-arrow-right"></i>
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Vinova Video",
    "class": "index-section section-video wow fadeInUp animated",
    "settings": [
      {
        "type": "url",
        "id": "video_url",
        "label": "Video link",
        "info": "Online video link"
      },
      {
        "type": "text",
        "id": "title_video",
        "label": "Title Video",
        "default": "Autumn is Coming"
      },
      {
        "type": "text",
        "id": "subheading_1",
        "label": "SubHeading Video",
        "default": "New arrivals"
      },

      {
        "type": "text",
        "id": "subheading_2",
        "label": "SubHeading Video",
        "default": "New arrivals"
      },

      {
        "type": "text",
        "id": "subheading_3",
        "label": "SubHeading Video",
        "default": "New arrivals"
      },

      {
        "type": "text",
        "id": "subheading_4",
        "label": "SubHeading Video",
        "default": "New arrivals"
      },

      {
        "type": "checkbox",
        "id": "button_enable",
        "label": "Show Button",
        "default": true
      },
      {
        "type": "text",
        "id": "title_link",
        "label": "Title Link",
        "default": "Shop now"
      },
      {
        "type": "url",
        "id": "cap_link",
        "label": "Link button"
      },
      {
        "type": "select",
        "id": "title_alignment",
        "label": "Heading alignment",
        "default": "text-left",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "range",
        "id": "image_overlay_opacity",
        "label": "Image Overlay Opacity",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "default": 25
      }
    ],
    "presets": [
      {
        "name": "Vinova Video",
        "category": "Video"
      }
    ]
  }
{% endschema %}
