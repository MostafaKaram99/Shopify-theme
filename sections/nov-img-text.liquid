<div class="gallery-image-custom distance{% if section.settings.has_fullwidth == true %} full_width{% endif %}{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}">
  {% if section.settings.has_fullwidth == false %}
    <div class="container">
  {% endif %}

  {% if section.settings.title != blank %}
  <div class="{{ section.settings.title_alignment }}">
    <div  class="title_block {{ section.settings.title_style }}">
      <span style="font-family:{{settings.type_header_family}}; color: {{ settings.heading_text }};" class="header-title">{{ section.settings.title }}</span>
      {% if section.settings.subheading != blank %}
      <span style="display: block; font-family:{{settings.type_base_family}}; color: {{ settings.sub_heading_text }};"  class="sub_title">{{ section.settings.subheading | escape }}</span>
      {% endif %}
    </div>
  </div>
  {% endif %}

  <div class="row spacing-{{ section.settings.spacing }}">
    {% for block in section.blocks %}
      {% if block.type == 'text' %}
        <div class="{{ block.settings.width_text }} {{ block.settings.width_text_tablet }} {{ block.settings.width_text_mobile }} d-flex align-items-center{% if block.settings.class_text != blank %} {{ block.settings.class_text }}{% endif %}">
          <div class="block_content pt-30 pb-30">
            {% if block.settings.title != blank %}
            <div class="title header-title">{{ block.settings.title }}</div>
            {% endif %}
            {% if block.settings.subtitle != blank %}
            <div class="sub-title mt-10">{{ block.settings.subtitle }}</div>
            {% endif %}
            {% if block.settings.btn != blank %}
            <a href="{{ block.settings.link_1 }}" class="btn mt-30">{{ block.settings.btn }}</a>
            {% endif %}
          </div>
        </div>
      {% endif %}
      {% if block.type == 'image' %}
        <div class="{{ block.settings.width_image }} {{ block.settings.width_image_tablet }} {{ block.settings.width_image_mobile }}{% if block.settings.class_image != blank %} {{ block.settings.class_image }}{% endif %}">
          <img class="w-100 lazyload" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1 1'%3E%3C/svg%3E" data-src="{{ block.settings.image | img_url: '570x' }}" alt="img">
        </div>
      {% endif %}
    {% endfor %}
  </div>

  {% if section.settings.has_fullwidth == false %} 
    </div>
  {% endif %}
</div>
