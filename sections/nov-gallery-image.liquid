<div class="distance{% if section.settings.class_section != blank %} {{ section.settings.class_section }}{% endif %}">
  {% if section.settings.has_fullwidth == false %}
  <div class="container">
  {% endif %}
    {% if section.settings.title != blank %}
      <div class="{{ section.settings.title_alignment }}">
        <div class="title_block {{ section.settings.title_style }}">
          <span>{{ section.settings.title }}</span>
          {% if section.settings.subheading != blank %}
            <span class="sub_title">{{ section.settings.subheading | escape }}</span>
          {% endif %}
        </div>
      </div>
    {% endif %}
    <div class="row spacing-{{ section.settings.spacing }}">
      {% case section.blocks.size %}
        {% when 1 %}
          {%- assign column_size = 'col-lg-12 col-md-12 col-xs-12' -%}
        {% when 2 %}
          {%- assign column_size = 'col-lg-6 col-md-6 col-xs-12' -%}
        {% when 3 %}
          {%- assign column_size = 'col-lg-4 col-md-4 col-xs-12' -%}
        {% when 4 %}
          {%- assign column_size = 'col-lg-3 col-md-4 col-xs-12' -%}
        {% when 5 %}
          {%- assign column_size = 'col-lg-cus-5 col-md-cus-5 col-xs-12' -%}
        {% else %}
          {%- assign column_size = 'col-lg-2 col-md-4 col-xs-6' -%}
      {% endcase %}

      {% for block in section.blocks %}
        <div class="{{ column_size }} gallery-image_column{% if block.settings.class != blank %} {{ block.settings.class }}{% endif %}">
          <div class="gallery-image__item lazyload {{ section.settings.style_button }}">
            {% if block.settings.link != blank %}
            <a class="w-100 gallery-image__link" href="{{ block.settings.link }}">
            {% endif %}
            {% if block.settings.image != blank %}
              <img class="w-100 lazyload" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1 1'%3E%3C/svg%3E" data-src="{{ block.settings.image | img_url: '1920x1920' }}" alt="{% if block.settings.cta_label != blank %}{{ block.settings.cta_label }}{% else %}gallery image{% endif %}">
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            {% if block.settings.link != blank %}
            </a>
            {% endif %}

            {% if block.settings.cta_label != blank %}
              <div class="gallery-image__caption">
                <a href="{{ block.settings.link }}" class="gallery-image__text">{{ block.settings.cta_label | escape }}</a>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div><!-- End row -->
  {% if section.settings.has_fullwidth == false %}
  </div><!-- End container -->
  {% endif %}
</div>
{% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
{% endif %}

{% schema %}
  {
    "name": "Vinova Gallery Image",
    "class": "index-section section-gallery-image",
    "max_blocks": 6,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Vinova Gallery Image"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub Heading",
        "default": "Subtitle from happy customers"
      },
      {
        "type": "select",
        "id": "title_alignment",
        "label": "Heading alignment",
        "default": "text-left",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "select",
        "id": "title_style",
        "label": "Heading Style",
        "default": "title_1",
        "options": [
          {
            "value": "title_1",
            "label": "Style 1"
          },
          {
            "value": "title_2",
            "label": "Style 2"
          },
          {
            "value": "title_3",
            "label": "Style 3"
          }
        ]
      },
      {
        "type": "select",
        "id": "style_button",
        "label": "Style Button Image",
        "default": "style_default",
        "options": [
          {
            "value": "style_default",
            "label": "Style Default"
          },
          {
            "value": "style-1",
            "label": "Style 1 (Not title and subtitle)"
          },
          {
            "value": "style-2",
            "label": "Style 2 (Not style and subtitle)"
          },
          {
            "value": "title-3",
            "label": "Style 3 (Has title and subtitle)"
          }
        ]
      },
      {
        "type": "select",
        "id": "spacing",
        "label": "Spacing Items",
        "default": "0",
        "options": [
          {
            "label": "0px",
            "value": "0"
          },
          {
            "label": "5px",
            "value": "5"
          },
          {
            "label": "10px",
            "value": "10"
          },
          {
            "label": "15px",
            "value": "15"
          },
          {
            "label": "20px",
            "value": "20"
          },
          {
            "label": "25px",
            "value": "25"
          },
          {
            "label": "30px",
            "value": "30"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "has_fullwidth",
        "label": "Full Width",
        "default":   false
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background colors"
      },
      {
        "type": "text",
        "id": "class_section",
        "label": "Class"
      },
      {
        "type": "text",
        "id": "distance_top",
        "label": "Top Distance Section",
        "default": "30px"
      },
      {
        "type": "text",
        "id": "distance_bottom",
        "label": "Bottom Distance Section",
        "default": "30px"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "select",
            "id": "alignment",
            "label": "Image alignment",
            "default": "center",
            "options": [
              {
                "value": "top",
                "label": "Top"
              },
              {
                "value": "center",
                "label": "Middle"
              },
              {
                "value": "bottom",
                "label": "Bottom"
              }
            ]
          },
          {
            "type": "text",
            "id": "class",
            "label": "Class"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          },
          {
            "type": "text",
            "id": "cta_label",
            "label": "Caption"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vinova Image Gallery",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}

<style>
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ section.settings.distance_top }};
    padding-bottom: {{ section.settings.distance_bottom }};
  }
</style>
