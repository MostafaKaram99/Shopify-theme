<div class="section-image-slider distance{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-owl">
  {% if section.settings.has_fullwidth == false %}
  <div class="container">
  {% endif %}
    {%- assign manu_limit = section.settings.limit -%}
    <div class="block_content">
      {% if section.blocks.size > 0 %}
        <div class="nov-owl-carousel owl-carousel owl-theme" 
          data-autoplay="true" 
          data-autoplayTimeout="2000" 
          data-loop="true" 
          data-margin="{{ section.settings.spacing }}" 
          data-dots="false" 
          data-nav="false" 
          data-items="{{ section.settings.show_number }}" 
          data-items_tablet="{{ section.settings.number_tablet }}" 
          data-items_mobile="{{ section.settings.number_mobile }}" 
          data-center="false" 
          data-start="0">
          {% for block in section.blocks %}
            <div class="image-slider__item" {{ block.shopify_attributes }}>
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="image-slider__link">
              {% endif %}
              {% if block.settings.image != blank %}
                {{ block.settings.image | img_url: '955x700', scale: 2 | img_tag: block.settings.image.alt, 'image-slider__image' }}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
              {% if block.settings.link != blank %}
                </a>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% endif %}

      {% if section.blocks.size == 0 %}
        {% include 'no-blocks' %}
      {% endif %}
    </div>

  {% if section.settings.has_fullwidth == false %}
  </div>
  {% endif %}
</div>
{% schema %}
  {
    "name": "Vinova image-slider",
    "class": "index-section image-slider-section",
    "max_blocks": 20,
    "settings": [
      {
        "type": "text",
        "id": "class",
        "label": "Class"
      },
      {
        "type": "text",
        "id": "show_number",
        "label": "Show Number Desktop",
        "default": "6"
      },
      {
        "type": "text",
        "id": "number_tablet",
        "label": "Show Number Tablet",
        "default": "4"
      },
      {
        "type": "text",
        "id": "number_mobile",
        "label": "Show Number Mobile",
        "default": "2"
      },
      {
        "type": "range",
        "id": "limit",
        "min": 4,
        "max": 30,
        "step": 1,
        "label": "Limit",
        "default": 8,
        "info": "Select number limit image-slider"
      },
      {
        "type": "select",
        "id": "spacing",
        "label": "Spacing Items",
        "default": "0",
        "options": [
        {
          "label": "0px",
          "value": "0"
        },
        {
          "label": "5px",
          "value": "5"
        },
        {
          "label": "10px",
          "value": "10"
        },
        {
          "label": "15px",
          "value": "15"
        },
        {
          "label": "20px",
          "value": "20"
        },
        {
          "label": "25px",
          "value": "25"
        },
        {
          "label": "30px",
          "value": "30"
        }
        ]
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background colors"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "checkbox",
        "id": "has_fullwidth",
        "label": "Full Width",
        "default": false
      },
      {
        "type": "text",
        "id": "distance_top",
        "label": "Top Distance Section",
        "default": "30px"
      },
      {
        "type": "text",
        "id": "distance_bottom",
        "label": "Bottom Distance Section",
        "default": "30px"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vinova Image Slider",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}

<style>
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ section.settings.distance_top }};
    padding-bottom: {{ section.settings.distance_bottom }};
  }
</style>
