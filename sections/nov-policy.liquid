{%- assign bg_image = section.settings.background_image -%}
{% if section.settings.background_color != blank or bg_image.src != blank %}
  <style>
    #section-policy-{{ section.id }} {
      {% if section.settings.background_color != blank %}
        background-color: {{ section.settings.background_color }};
      {% endif %}
      {% if bg_image.src != blank %}
        background-image: url("{{ bg_image | img_url: '1920x' }}");
        background-repeat: no-repeat;
      {% endif %}
    }
  </style>
{% endif %}
<div id="section-policy-{{ section.id }}" class="distance{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}">
  {% if section.settings.has_fullwidth == false %}
    <div class="container_90">
  {% endif %}
    {% if section.settings.title != blank %}
      <div class="bolck">
        <div class="title_block">
          <span style="font-family:{{settings.type_header_family}}; color: {{ settings.heading_text }};" class="header-title">{{ section.settings.title | escape  }}</span>
        </div>
        <div style="font-family:{{settings.type_base_family}}; color: {{ settings.sub_heading_text }};" class="sub_title">{{ section.settings.sub_title | escape }}</div>
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="nov-policy">
        <div class="row">
          {% for block in section.blocks %}
            <div class="nov-policy-item d-flex align-items-center{% if block.settings.class != blank %} {{ block.settings.class }} {% endif %}{{ section.settings.width }} {{ section.settings.width_tablet }} {{ section.settings.width_sm_mobile }} {{ section.settings.width_xs_mobile }}{% if forloop.last != true %} mb-xs-30{% endif %}">
              <div class="policy-icon">
                {% if block.settings.policy_icon != blank %}
                  <img class="lazyload" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1 1'%3E%3C/svg%3E" data-src="{{ block.settings.policy_icon | img_url: '120x' }}" alt="icon_policy">
                {% else %}
                  <img src="https://via.placeholder.com/100x100">
                {% endif %}
              </div>
              <div class="title-policy">{{ block.settings.title_policy }}</div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  {% if section.settings.has_fullwidth == false %}
    </div>
  {% endif %}
</div>
